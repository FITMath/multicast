h1 Chromecasts  
  a.btn.btn-primary.float-right(href='/devices/new')
    i.fa.fa-plus
    | &nbsp;&nbsp;Register Chromecast
table.table
  thead
    tr
      th Name
      th Channel
      th.text-right Edit
  tbody
    if devices && devices.length
      each d in devices
        tr
          td
            if d.unregistered
              a.badge(href='/devices/new', class=d.status)= d.name
              div Unregistered
            else
              a.badge(href=`/devices/${d.deviceId}/edit`, class=d.status)= d.name
              div= d.location
          td
            if d.unregistered
              span(style='color: #ccc') unregistered
            else
              if d.channel
                a(href=`/channels/${d.channel._id}/edit`)= d.channel.name
              else
                .text-gray no channel
          td.text-right
            a(href=`/devices/${d.deviceId}`) Preview
    else
      tr
        td.text-gray(colspan=42) No devices available.